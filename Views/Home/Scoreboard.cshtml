@{
    ViewData["Title"] = "Scoreboard";
}

<div>
    <br>
    <table class="table table-striped table-hover">
        <caption>
            PicoCTF Scoreboard
        </caption>
        <thead>
            <tr>
                <th>Position</th>
                <th>Name</th>
                <th>Affiliation</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in (List<PlayerScore>)ViewData["Scores"])
            {
                <tr>
                    <td>@item.scoreboardPosition</td>
                    <td>@item.name</td>
                    <td>@item.affiliation</td>
                    <td>@item.score</td>
                </tr>
            }
        </tbody>
    </table>
</div>
