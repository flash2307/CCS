@{
    ViewData["Title"] = "Scoreboard";
    var scoreboard = (Scoreboard)ViewData["Scoreboard"];
}

<div>
    <br>
    <table class="table table-striped table-hover">
        <caption>
            PicoCTF Scoreboard - Last update: @scoreboard.LastFetchTime.ToString("ddd, MMM dd yyy HH:mm:ss tt")
        </caption>
        <thead>
            <tr>
                <th>Position</th>
                <th>Name</th>
                <th>Affiliation</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in scoreboard.PlayerScores)
            {
                <tr>
                    <td>@item.ScoreboardPosition</td>
                    <td>@item.Name</td>
                    <td>@item.Affiliation</td>
                    <td>@item.Score</td>
                </tr>
            }
        </tbody>
    </table>
</div>
